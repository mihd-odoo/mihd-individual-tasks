<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_inherit_matrix_systems" model="ir.ui.view">
        <field name="name">product.template.form.inherit.matrix.systems</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="after">
                <group>
                    <separator string="Product Group Selection"/>
                    <field name="product_group"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>