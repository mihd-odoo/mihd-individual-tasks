<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_product_form_inherit_nypwshoes" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.nypwshoes</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="after">
                <group>
                    <separator string="Shoes Pricing"/>
                    <field name="pair_per_case"/>
                    <field name="price_per_pair"/>
                </group>
            </xpath>
            <xpath expr="//div[@name='pricing']">
                <field name="list_price" class="oe_inline" widget='monetary'
                options="{'currency_field': 'currency_id', 'field_digits': True}" attrs="{'readonly':['|',('pair_per_case','!=', False),('price_per_pair', '!=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>